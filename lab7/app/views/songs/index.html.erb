<h1>Songs</h1>

</br>
</br>

<%= link_to "New Song", new_song_path, class: "fancy-link" %>
</br>
</br>

<ul>
  <% @songs.each do |song| %>
    <li class="fancy-list">
      <p class="fancy-text"><%= song.title %></p>

      <%= link_to "Show", song_path(song) %>
        <% if policy(Song).edit? %>
          <%= link_to 'Edit', edit_song_path(song) %>
          <%= link_to "Delete", song_path(song), method: :delete, data: { confirm: "Are you sure?" } %>
        <% end %>
    </li>
  <% end %>
</ul>

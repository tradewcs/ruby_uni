<h1 class="fancy-title">Artists</h1>

<%= form_with url: artists_path, method: :get, local: true do |form| %>
  <%= form.label :q, "Search by artist name:" %>
  <%= form.text_field :q, value: params[:q] %>
  <%= form.submit "Search" %>
<% end %>

<ul>
  <% @artists.each do |artist| %>
    <li class="fancy-list">
      <span class="fancy-text"><%= artist.name %></span>
      <%= link_to 'Show', artist_path(artist) %>
      <%= link_to 'Edit', edit_artist_path(artist) %>
      <%= link_to 'Delete', artist_path(artist), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>

<%= link_to 'Home', songs_path, class: "back-link" %>
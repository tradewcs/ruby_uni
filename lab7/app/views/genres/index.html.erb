<h1 class="fancy-title">Genres</h1>

<%= form_with url: genres_path, method: :get, local: true, html: {class: "search-bar-container"} do |form| %>
  <%= form.label :q, "Search by genre name:" %>
  <%= form.text_field :q, value: params[:q], placeholder: "Enter genre..." %>
  <%= form.submit "Search" %>
<% end %>

<ul>
  <% @genres.each do |genre| %>
    <li class="fancy-list">
      <span class="fancy-text"><%= genre.name %></span>
      <div class="genre-actions" style="margin-top: 0.5em;">
        <%= link_to 'Show', genre_path(genre), class: "btn btn-show" %>
        <%= link_to 'Edit', edit_genre_path(genre), class: "btn btn-edit" %>
        <%= link_to 'Delete', genre_path(genre), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-delete" %>
      </div>
    </li>
  <% end %>
</ul>

<%= link_to 'Home', songs_path, class: "back-link" %>